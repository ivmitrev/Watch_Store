                <a href="/">Home</a>
            </div>
            <div class="st" style="display:flex;gap: 15px;margin: auto;justify-content: center;align-items: center">
                <a href="/rolex">Rolex</a>
                <a href="/omega">Omega</a>
                <a href="/patek">Patek Philippe</a>
                <a href="/hublot">Hublot</a>
                <a href="/tissot">Tissot</a>
                <a href="/breitling">Breitling</a>
            </div>
            
            <div>
                <img  width="30px" height="30px" src="Images/iconCart.png" alt="">
            </div>
        </div>
       

        <article class="content px-4">
            @Body

        </article>

        <footer>
            <h1>FOOTER</h1>
        </footer>
    </main>
</div>
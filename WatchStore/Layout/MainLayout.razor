    <main>

        <style>
            .top-row a
            {
                text-decoration: none;
                transition: color 0.4s ease;
                color: white;
            }
            .top-row a:hover
            {
                color: lightgreen;
            }

            img
            {
                transition: all 300ms ease-out;
            }
            img:hover
            {
                transition: all 300ms ease-in;
                transform: scale(1.1);
            }
            
        </style>
        
        <div class="top-row px-4" style="color:white;background-color:seagreen;display: flex;justify-content: space-between; align-items: center">
